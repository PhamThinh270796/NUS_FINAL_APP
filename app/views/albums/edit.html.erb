<%= form_for @album do |f| %>
  <div class="container">
    <div class="row mt-5">
      <div class="col-lg-10 col-md-9 col-sm-6">
        <h4 class="facebook-color float-left pt-2">Edit Album</h4>
      </div>
      <div class="col-lg-2 col-md-3 col-sm-6"><%= link_to 'Back', albums_path, class: "float-right btn btn-secondary btn-block"%>
      </div>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-6 pl-0">
        <div class="form-group col-md-12">
          <label>Album Title</label>
          <%= f.text_field :album_title, class: "form-control", required: true %>
        </div>
        <div class="form-group col-md-12">
          <label for="inputState">Sharing Mode</label>
          <select id="inputState" class="form-control" name="album[sharing_mode]">
            <option selected value="1">Public</option>
            <option value="0">Private</option>
          </select>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group">
          <label>Descripstion</label>
          <%= f.text_area :description, class: "form-control rounded", rows: 5%>
        </div>
      </div>
    </div>

    <div class="row" id="photo-row">
      <%= f.fields_for :photos do |p| %>
        <div class="col-md-3 avatar-input" id="photo-item-0" class="photo-album">
          <%= p.hidden_field :user_id, value: current_user.id %>
          <div class="avatar-upload float-left">
            <%= p.file_field :path, id: "imageUpload-#{p.object.id}", class: "mb-2" %>
            <div class="avatar-edit">
              <label for="imageUpload-<%= p.object.id %>"></label>
            </div>
            <div class="avatar-preview">
              <%= tag.div id: "imagePreview", style: "background-image: url(#{p.object.path.url});" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-md-12">
        <%= f.submit t('save'), class: "btn btn-secondary" %>
        <%= link_to t('delete'), album_path(@album), method: 'delete', data: {confirm: "Are you sure ?"}, class: "btn btn-danger float-right" %>
      </div>
    </div>
  </div>
<% end %>