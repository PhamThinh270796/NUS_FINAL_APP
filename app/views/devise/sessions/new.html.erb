<section class="login_panel container animated fadeIn ml-5">
  <div class="limiter">
    <div class="container-login100">
      <div class="wrap-login100">
        <div class="login100-pic js-tilt" data-tilt>
          <%= image_tag("img-01.png", alt: "IMG")%>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "login100-form validate-form", id:"login-form"}) do |f| %>
        <span class="login100-form-title">
          <%= t('.fotobook_login') %>
        </span>
        <ul id="errors" class="list-group mb-3">

        </ul>
        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input100", placeholder: t('email')%>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-envelope" aria-hidden="true"></i>
          </span>
        </div>

        <div class="wrap-input100 validate-input" data-validate="Password is required">
          <%= f.password_field :password, autocomplete: "current-password", class: "input100", placeholder: t('password')%>
          <span class="focus-input100"></span>
          <span class="symbol-input100">
            <i class="fa fa-lock" aria-hidden="true"></i>
          </span>
        </div>

        <div class="container-login100-form-btn">
          <%= f.submit t("login"), class: "login100-form-btn" %>
        </div>

        <hr class="hr-text" data-content="or">

        <div class="flex-c-m">
          <%= link_to user_facebook_omniauth_authorize_path, class: "login100-social-item bg1" do %>
            <i class="fab fa-facebook-f"></i>
          <% end %>
          <%= link_to user_google_oauth2_omniauth_authorize_path, class: "login100-social-item bg3" do %>
            <i class="fab fa-google"></i>
          <% end %>
        </div>

        <div class="form-check text-center mt-2">
          <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me, class: "form-check-input"%>
          <% end %>
          <label class="form-check-label txt1" for="exampleCheck1"><%= t('.remember_me') %></label>
        </div>

        <div class="text-center p-t-12">
          <span class="txt1">
            <%= t('.forgot') %>
          </span>
          <%= link_to t('.user_pass'), new_user_password_path, class: "txt2"%>
        </div>

        <div class="text-center p-t-136">
          <%= link_to t('.create_an_account'), new_user_registration_path, class: "txt2"%>
          <i class="fas fa-angle-right ml-1"></i><br>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>