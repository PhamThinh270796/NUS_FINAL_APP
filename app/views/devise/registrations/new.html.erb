<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100">
      <div class="login100-pic js-tilt my-auto pb-5" data-tilt>
        <%= image_tag("img-01.png", alt: "IMG")%>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "login100-form validate-form"}) do |f| %>
      <span class="login100-form-title">
        Sign Up
      </span>
      <% if resource.errors.any? %>
      <div class="alert alert-dark">
        <%= render "devise/shared/error_messages", resource: resource %>
      </div>
      <% end %>
      <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">
        <%= f.text_field :first_name, autofocus: true, class: "input100", placeholder: "First Name"%>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-envelope" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate="Password is required">
        <%= f.text_field :last_name, class: "input100", placeholder: "Last Name"%>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-user" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate="Password is required">
        <%= f.email_field :email, autocomplete: "email", class: "input100", placeholder: "Email"%>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="far fa-user" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate="Password is required">
        <%= f.password_field :password, autocomplete: "new-password", class: "input100", placeholder: "Password" %>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-key" aria-hidden="true"></i>
        </span>
      </div>

      <div class="wrap-input100 validate-input" data-validate="Password is required">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input100", placeholder: "Confirmation Password" %>
        <span class="focus-input100"></span>
        <span class="symbol-input100">
          <i class="fa fa-lock" aria-hidden="true"></i>
        </span>
      </div>

      <div class="container-login100-form-btn">
        <%= f.submit "Sign Up", class: "login100-form-btn" %>
      </div>

      <div class="text-center pt-4">
        <span class="txt1">
          Already have an account ?
        </span>
      </div>

      <div class="text-center p-t-136">
        <%= link_to 'Back to Login page', new_user_session_path, class: "txt2"%>
        <i class="fas fa-angle-right ml-1"></i>
      </div>
      <% end %>
    </div>
  </div>
</div>
</section>