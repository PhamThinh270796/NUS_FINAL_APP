<nav class="navbar navbar-expand-lg navbar-dark" id= "main-nav">
  <% if user_signed_in? %>
    <% if current_user.role.eql?("admin")%>
      <%= link_to 'Fotobook', admin_root_path, class: "navbar-brand font-weight-bolder"%>
    <% else %>
      <%= link_to 'Fotobook', root_path, class: "navbar-brand font-weight-bolder"%>
    <% end %>
  <% else %>
      <%= link_to 'Fotobook', root_path, class: "navbar-brand font-weight-bolder"%>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="col-6 d-none d-lg-block">
    <form class="search-container" action="/">
      <input id="search-box" type="text" class="search-box" name="q"/>
      <label for="search-box"><i class="fas fa-search search-icon"></i></label>
      <input type="submit" id="search-submit" />
    </form>
  </div>

  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <% if !user_signed_in? %>
    <ul class="navbar-nav justify-content-end text-center">
      <li class="nav-item mt-12">
        <%= link_to t("login"), new_user_session_path ,class: "nav-link", id: "login-link"%>
