      <li class="nav-item d-none d-lg-block mt-12">
        <p class="nav-link" id="nav-or">or</p>
      </li>
      <li class="nav-item pt-1 mt-12">
        <button class="btn btn-sm my-2 my-sm-0">
          <%= link_to t("sign_up"), new_user_registration_path, id: "login-link" %>
        </button>
      </li>
    </ul>
    <% else %>
    <ul class="navbar-nav justify-content-end text-center align-item-center">
      <li class="nav-item mt-12">
        <%= link_to current_user.first_name + " " + current_user.last_name, edit_user_registration_path, class: "nav-link", id: "login-link"%>
      </li>
      <li class="nav-item d-none d-lg-block mt-12">
        <p class="nav-link" id="nav-or">or</p>
      </li>
      <li class="nav-item pt-1 mt-12">
        <button class="btn btn-sm my-2 my-sm-0">
