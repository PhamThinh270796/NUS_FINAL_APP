<section class="photo-album">
  <div class="container mt-5">
    <div class="row justify-content-end">
      <div class="col-md-12 col-lg-10 my-auto">
        <h4 class="facebook-color float-left pt-2"><%= t('photo')%></h4>
      </div>
      <div class="col-sm-12 col-lg-2">
        <%= link_to t('.add_new_photo'), new_photo_path, class: "btn btn-secondary btn-block"%>
      </div>
    </div>
    <hr>
    <div class="row" id="photo-content">
      <% @photos.each do |photo| %>
      <div class="col-md-6 col-lg-6 col-xl-4">
          <figure class="snip1577">
            <%= image_tag("#{photo.path.thumb.url}", class: "card-img h-100 img-fluid") %>
            <% if !photo.is_public? %>
              <span class="symbol-photo">
                <i class="fa fa-lock" aria-hidden="true"></i>
              </span>
            <% end %>
            <figcaption>
              <h3 class="truncate"><%= photo.title %></h3>
              <h4 class="text-justify"><%= photo.description %></h4>
              <h5 class="pt-2">
                <span class="float-left">
                  <%= photo.liked %>
                  <i class="fas fa-thumbs-up"></i>
                </span>
                <span class="float-right">
                  <i class="fas fa-clock"></i>
                  <%= photo.created_at.to_formatted_s(:long_ordinal) %>
                </span>
              </h5>
            </figcaption>
            <%= link_to '', edit_photo_path(photo) %>
          </figure>
        </div>
      <% end %>
    </div>
    <hr>
    <div class="row">
      <div class="col-md-12 panigate-center">
        <%= paginate @photos, themes: "bootstrap4"%>
      </div>
    </div>
  </div>
</section>