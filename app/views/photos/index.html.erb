        <div class="float-right pr-3">
        <% if user_signed_in? %>
            <%= link_to current_user.first_name + " " + current_user.last_name, new_user_session_path, class: "login_button"%>
            <%= link_to 'Sign Out', destroy_user_session_path, method: "DELETE",class: "sign_up_button"%>
